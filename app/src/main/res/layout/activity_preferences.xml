<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".profil.PreferencesActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Mes préférences : "
        android:textColor="@color/contrast_blue"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:text="Veuillez saisir vos préférences pour vos recommandations."
        android:textSize="15sp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:orientation="horizontal">-->

        <!--            <TextView-->
        <!--                android:layout_width="120dp"-->
        <!--                android:layout_height="30dp"-->
        <!--                android:text="Votre ville : "-->
        <!--                android:textStyle="bold"/>-->

        <!--            <EditText-->
        <!--                android:id="@+id/ville_edit_preferences"-->
        <!--                android:layout_width="120dp"-->
        <!--                android:layout_height="50dp"-->
        <!--                android:layout_marginStart="5dp"-->
        <!--                />-->
        <!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--        <LinearLayout-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="50dp"-->
            <!--            android:orientation="horizontal">-->

            <!--            <TextView-->
            <!--                android:layout_width="120dp"-->
            <!--                android:layout_height="30dp"-->
            <!--                android:text="Votre ville : "-->
            <!--                android:textStyle="bold"/>-->

            <!--            <EditText-->
            <!--                android:id="@+id/ville_edit_preferences"-->
            <!--                android:layout_width="120dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:layout_marginStart="5dp"-->
            <!--                />-->

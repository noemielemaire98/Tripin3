<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Prix des activités"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>


    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbarActivités"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:bsb_bubble_color="@color/colorAccent"
        app:bsb_bubble_text_color="@color/contrast_blue"
        app:bsb_track_color="@color/gray500"
        app:bsb_always_show_bubble="false"
        app:bsb_max="300"
        app:bsb_min="0"
        app:bsb_progress="100"
        app:bsb_show_progress_in_float="false"
        app:bsb_show_thumb_text="true"
        app:bsb_show_section_text="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Prix des hotels (par nuit)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>


    <com.xw.repo.BubbleSeekBar
        android:id="@+id/seekbarHotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:bsb_bubble_color="@color/colorAccent"
        app:bsb_bubble_text_color="@color/contrast_blue"
        app:bsb_track_color="@color/gray500"
        app:bsb_always_show_bubble="false"
        app:bsb_max="500"
        app:bsb_min="0"
        app:bsb_progress="200"
        app:bsb_show_progress_in_float="false"
        app:bsb_show_thumb_text="true"
        app:bsb_show_section_text="true"
        android:layout_marginBottom="20dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/mail_edittext_login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:autofillHints="@string/mail_edit"
        android:hint="@string/mail_edit"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_edit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_edittext_login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:autofillHints="@string/password_edit"
        android:hint="@string/password_edit"
        android:background="@drawable/rounded_edit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/mail_edittext_login"
        app:layout_constraintTop_toBottomOf="@+id/mail_edittext_login" />

    <Button
        android:id="@+id/signin_button_login"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:text="@string/signin_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext_login"
        app:layout_constraintStart_toStartOf="@+id/password_edittext_login"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_login" />

    <TextView
        android:id="@+id/back_account_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/create_account_button"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/signin_button_login"
        app:layout_constraintStart_toStartOf="@+id/signin_button_login"
        app:layout_constraintTop_toBottomOf="@+id/signin_button_login" />
</androidx.constraintlayout.widget.ConstraintLayout>
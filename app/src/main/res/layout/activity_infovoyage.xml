<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/voyage_title_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="Titre"
            android:textSize="30dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/voyage_date_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="italic"
            tools:text="Date"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Destination :"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/voyage_destination_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            tools:text="Paris"
            android:textSize="20dp"/>
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Voyageur(s) : "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/voyage_nb_voyageurs_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            tools:text="3"
            android:textSize="20dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Budget : "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/voyage_budget_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                tools:text="300"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Détails"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hôtel(s) :"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/voyage_hotel_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                tools:text="0"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Vol(s) : "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/voyage_flight_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                tools:text="3"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Activité(s) : "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/voyage_activite_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                tools:text="2"
                android:textSize="20dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>